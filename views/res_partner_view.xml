<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_partner_form_inherit_customer_social_media" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.customer.social.media</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='image_1920']"
                       position="before"
                       context="{'res_partner_search_mode': 'customer'}">
                        <group>
                             <div class="alert alert-success fa fa-check text-center mb-3"
                                 attrs="{'invisible':['|','|',('facebook','=',False),('linkedin','=',False), ('twitter','=',False)]}">
                                 The Social Media Profile for this Customer is Completed."Please, check the Social Media Profile Tag"
                            </div>
                        </group>
                </xpath>
                <xpath expr="//page[@name='internal_notes']"
                       position="after" name="profile" string="Profile"
                       context="{'res_partner_search_mode': 'customer'}">
                    <page string="Social Media Profile">
                        <sheet>
                            <group>
                                <label for="facebook" class="fa fa-facebook m-1 col-md-3 o_light_label oe_inline"/><field name="facebook" widget="url" nolabel="1"/>
                                <label for="linkedin" class="fa fa-linkedin m-1 col-md-3 o_light_label oe_inline"/><field name="linkedin" widget="url" nolabel="1"/>
                                <label for="twitter" class="fa fa-twitter m-1 col-md-3 o_light_label oe_inline"/><field name="twitter" widget="url" nolabel="1"/>
                            </group>
                            <group>
                                <div attrs="{'invisible':['|','|',('facebook','=',False),('linkedin','=',False), ('twitter','=',False)]}">
                                    Social Media Profile  <field name="image" widget="image" width="7%" class="oe_inline" placeholder="Author Name"/>
                                </div>
                            </group>
                       </sheet>
                    </page>
                </xpath>
            </field>
        </record>
        <record id="view_partner_tree_inherit_customer_social_media" model="ir.ui.view">
            <field name="name">res.partner.tree.inherit.customer.social.media</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='display_name']" position="after"
                       context="{'res_partner_search_mode': 'customer'}">
                    <field name="image" widget="image" width="8.3%"/>
                    <field name="facebook" widget="url" class="fa fa-facebook"/>
                    <field name="linkedin" widget="url" class="fa fa-linkedin"/>
                    <field name="twitter" widget="url" class="fa fa-twitter"/>
                 </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="view_partner_kanban_inherit_customer_social_media">
            <field name="name">res.partner.kanban.inherit.customer.social.media</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.res_partner_kanban_view"/>
            <field name="arch" type="xml">
                <field name="mobile" position="after">
                    <field name="image" context="{'res_partner_search_mode': 'customer'}"/>
                </field>
                <xpath expr="//span[hasclass('oe_kanban_partner_links')]"
                       position="inside">
                    <div class="fa fa-facebook text-facebook" t-if="record.facebook.raw_value"><field name="facebook" widget="url"/></div>
                    <div class="fa fa-linkedin text-linkedin" t-if="record.linkedin.raw_value"><field name="linkedin" widget="url"/></div>
                    <div class="fa fa-twitter text-twitter" t-if="record.twitter.raw_value"><field name="twitter" widget="url"/></div>
                    <div class="alert alert-success text-center mb-3"
                         attrs="{'invisible':['|','|',('facebook','=',False),('linkedin','=',False), ('twitter','=',False)]}">
                       The Social Media Profile is Completed
                        <img widget="image" width="8%" t-if="record.image.raw_value" t-att-src="kanban_image('res.partner', 'image', record.id.raw_value)"/>
                    </div>
                </xpath>
            </field>
        </record>

       <record id="view_partner_search_inherit_customer_social_media" model="ir.ui.view">
           <field name="name">res.partner.search.inherit.customer.social.media</field>
           <field name="model">res.partner</field>
           <field name="inherit_id" ref="base.view_res_partner_filter"/>
           <field name="arch" type="xml">
                <xpath expr="//filter[@name='type_person']" position="after">
                    <filter string="Incomplete Social Media Profile"
                            name="has_social_media"
                            domain="['|','|',('facebook','=',False), ('linkedin','=',False), ('twitter','=',False)]"
                            context="{'res_partner_search_mode': 'customer'}"/>
                </xpath>
           </field>
        </record>

    </data>
</odoo>
